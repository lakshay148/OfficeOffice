<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    tools:context=".Fragments.AddRoleFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:background="#ffffff"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Enter your ID" />
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_role"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_layout_name2" />

        <Spinner
            android:id="@+id/spinner_domain"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_role" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_below="@+id/spinner_domain"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Submit" />
    </RelativeLayout>
</FrameLayout>
