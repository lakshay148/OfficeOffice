<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Activity.MainActivity">
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/gaadiImage"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gaadilogo" />
    <LinearLayout
        android:layout_below="@+id/gaadiImage"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/idOfEmployee"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:text="@string/emp_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_below="@+id/idOfEmployee"
            android:id="@+id/empId"
            android:drawablePadding="8dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:layout_marginLeft="20dp"
            android:layout_width="fill_parent"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/empId"
            android:id="@+id/pass"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="@string/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_below="@+id/pass"
            android:id="@+id/editPassword"
            android:drawablePadding="8dp"
            android:paddingRight="50dp"
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            android:layout_width="fill_parent"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:password="true" />
        <Button
            android:layout_below="@+id/editPassword"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:textSize="15sp"
            android:text="@string/login"
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
